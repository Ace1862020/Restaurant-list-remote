<!-- search bar -->
<div class="container account-form">
  <div class="account-form-outer">
    <div class="row">
      <div class="card card-body">
        <h1 class="text-center mb-4">Login</h1>
        {{> message}}
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="password" class="form-label">password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password">
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-info btn-block mt-2">Login</button>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
          </div>
          <p class="lead mt-4">
            No Account ? <a href="/users/register">Register Now</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>