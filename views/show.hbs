<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto mb-3">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
    <!--Submit & Back-->
    <div class="d-flex justify-content-between col-12 col-md-10 mx-auto mb-3">
      <!--Back-->
      <a href="/">
        <button type="button" class="btn btn-secondary">
          <span class="show-btname">Back</span>
        </button>
      </a>
      <!--Submit-->
      <form action="/restaurant/{{restaurant._id}}/edit" method="GET">
        <button type="submit" class="btn btn-info" style="font-family: 'Noto Sans SC', sans-serif;">
          <i class="far fa-edit">
            <span class="show-btname">Edit</span>
          </i>
        </button>
      </form>
      <!--Delete-->
      <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger">
          <i class="far fa-minus-square">
            <span class="show-btname">Remove</span>
          </i>
        </button>
      </form>
    </div>
  </div>
</div>