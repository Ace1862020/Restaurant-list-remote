<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="row">
      <div class="col">
        <div class="search-bar-inner col">
          <form action="/search">
            <!-- <h4 class="mb-2">尋找餐廳：</h4> -->
            <div class="input-group">
              <input type="search" name="keyword" class="form-control" id="search-input" placeholder="輸入餐廳、分類"
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col">
        <div class="input-group col">
          <input type="text" class="form-control" placeholder="依排序顯示" aria-label="Text input with dropdown button"
            disabled>
          <button class="btn btn-major dropdown-toggle" role="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="true">
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item" href="/sort/id/asc">新到舊</a></li>
            <li><a class="dropdown-item" href="/sort/id/desc">舊到新</a></li>
            <li><a class="dropdown-item" href="/sort/name/asc">餐廳名稱</a></li>
            <li><a class="dropdown-item" href="/sort/category/asc">餐廳類別</a></li>
            <li><a class="dropdown-item" href="/sort/rating/desc">評價高至低</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <!-- Create -->
      <div class="mb-3">
        <form action="/restaurants/new" method="GET">
          <button type="submit" class="main-create-btn">
            <i class="fas fa-plus"></i>
            <span>新增餐廳</span>
          </button>
        </form>
      </div>
      <div class="card-columns">
        <!-- render restaurants-->
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <!--Edit & Delete-->
            <div class="card-body pt-1 px-2">
              <hr>
              <!--Edit-->
              <div class="d-flex justify-content-between">
                <form action="/restaurants/{{this._id}}/edit" method="GET" style="display:inline;">
                  <button type="submit" class="btn btn-info">
                    <i class="far fa-edit"></i>
                  </button>
                </form>
                <!--Delete-->
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-secondary">
                    <i class="far fa-minus-square"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>